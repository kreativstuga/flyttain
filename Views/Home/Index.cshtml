    var getCarPools = function(location) {

        $.ajax({
                type: "GET",
                url: "/api/getCarPool",
                dataType: "json",
                data: location,
                success: function(response) {

                    var html = "";
                    for (var i = 0; i < response.length; i++) {
                        html += "<li>" + response[i].Name + " " + parseInt(response[i].Distance) / 10 + " m</li>";
                    }


                    $("#pools-list").html(html);

                }
            });
    };

